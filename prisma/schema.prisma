// Clipwise Prisma Schema
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Auth.js Required Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // AI 配額追蹤
  aiQuotaUsed    Int      @default(0) @map("ai_quota_used")
  aiQuotaResetAt DateTime @default(now()) @map("ai_quota_reset_at")

  accounts  Account[]
  sessions  Session[]
  bookmarks Bookmark[]
  tags      Tag[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Application Models
// ============================================

model Bookmark {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  url         String
  title       String?
  description String?  @db.Text
  aiSummary   String?  @map("ai_summary") @db.Text
  aiStatus    AiStatus @default(PENDING) @map("ai_status")
  thumbnail   String?
  favicon     String?
  domain      String?
  content     String?  @db.Text
  language    String?  @db.VarChar(10)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags BookmarkTag[]

  @@index([userId])
  @@index([userId, createdAt(sort: Desc)])
  @@index([domain])
  @@map("bookmarks")
}

model Tag {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  name      String
  nameLower String   @map("name_lower")
  color     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookmarks BookmarkTag[]

  @@unique([userId, nameLower])
  @@index([userId])
  @@map("tags")
}

model BookmarkTag {
  id         String   @id @default(cuid())
  bookmarkId String   @map("bookmark_id")
  tagId      String   @map("tag_id")
  createdAt  DateTime @default(now()) @map("created_at")

  bookmark Bookmark @relation(fields: [bookmarkId], references: [id], onDelete: Cascade)
  tag      Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([bookmarkId, tagId])
  @@index([tagId])
  @@map("bookmark_tags")
}

enum AiStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
